/**text.wxss**/
.textmargin {
  float: left;
}

.news-avatar {
  width: 130rpx;
  height: 130rpx;
  margin: 5rpx;
  border-radius: 10%;
  float: left;
}

#wordscard text {
  font-size: .8em;
}

.rowalign {
    flex-direction: row;
    float: left;
}
.rowalign text {
  padding-left: 10rpx;
}

.card, #wordscard {
    background: #fff;
    margin: 20rpx 14px;
    padding: 20px 32rpx;
    border-radius: 2%;
}

.card-poetry {
    background: #fff;
    background-size: cover;
    width: 100%;
    height: 100vh;
}

.card button {
    width: 400rpx;
    margin-top: 30px;
    margin-bottom: 25rpx;
    /*margin: 10rpx 75rpx;*/
}

#wordscard {
    height: 130px;
}

page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}
page {
    background: #e0e0e0;
}

.title {
    font-weight: bold;
    font-size: 1.2em;
    /* color:#19537D; */
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    display: flex;
    justify-content:center;
}

.authors{
    font-size: 1.0em;
    /* color: #65645F; */
    display: flex;
    justify-content:center;
}

.content{
    font-size: 1.0em;
    /* color:#76621c; */
    display: flex;
    justify-content:center;
    margin: 30rpx 20rpx;
}

.tips{
    font-size: 0.8em;
    color: #C4C4C4;
    display: flex;
    width: 100%;
    justify-content:center;
    bottom:0; 
    padding-bottom: 50rpx;
    padding-top: 100rpx;
}

/* 横着的分割View样式 */
/*分割线样式*/
.divLine{
 background: #cdcdcd;
 width: 100%;
 margin: 80rpx 20rpx;
 height: 2rpx;
}

.btnText{
  font-size: 0.8em;
}

.shareBtn{
  border: none;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.randomBtn{
  border: none;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

button::after {
  border: 0;
}

button[plain]{ 
  border:0;
}

.btnImg {
  margin-right: 8rpx;
  width: 48rpx;
  height: 48rpx;
}

.layout_horizontal{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.tag {
    font-weight: 200;
    font-size: .8em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
    color: #006621;
}

.para {
    font-size: .9em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
}
.tlink {
    font-size: .7em;
    color: #0e61af;
    padding-top: 10rpx;
    width: 100%;
}