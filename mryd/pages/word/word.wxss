/**text.wxss**/
.textmargin {
  float: left;
}

.news-avatar {
  width: 130rpx;
  height: 130rpx;
  margin: 5rpx;
  border-radius: 10%;
  float: left;
}

#wordscard text {
  font-size: .8em;
}

.rowalign {
    flex-direction: row;
    float: left;
}
.rowalign text {
  padding-left: 10rpx;
}

.card, #wordscard {
    background: #fff;
    margin: 20rpx 14px;
    padding: 20px 32rpx;
    border-radius: 2%;
}

.card-poetry {
    background: #fff;
    background-size: cover;
    width: 100%;
    height: 100vh;
    position: relative; 
    display: flex;  
    flex-direction: column;
    align-items: center;  
}
.short-card {
    /*height: 350rpx;*/
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: center;
}

.card button {
    width: 400rpx;
    margin-top: 30px;
    margin-bottom: 25rpx;
    /*margin: 10rpx 75rpx;*/
}

#wordscard {
    height: 130px;
}

page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}
page {
    background: #e0e0e0;
}

.title {
    font-weight: bold;
    font-size: 1.2em;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    display: flex;
    justify-content:center;
}

.authors{
    font-size: 1.0em;
    display: flex;
    color: #65645F;
    justify-content:flex-end;
    padding-right: 50rpx;
}

.content{
    font-size: 1.0em;
    /* color:#76621c; */
    display: flex;
    justify-content:center;
    margin-top: 200rpx;  
    padding-left: auto;
    padding-right: auto;
    padding: 100rpx;
}

.tips{
    font-size: 0.8em;
    color: #C4C4C4;
    display: flex;
    width: 100%;
    bottom:0; 
    padding-bottom: 50rpx;
    padding-top: 100rpx;
    flex-direction: row;
    justify-content: center;

}

.userinfo-avatar {  
  overflow:hidden;  
  display: flex;  
  position:absolute; 
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
} 

.tag {
    font-weight: 200;
    font-size: .8em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
    color: #006621;
}

.para {
    font-size: .9em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
}
.tlink {
    font-size: .7em;
    color: #0e61af;
    padding-top: 10rpx;
    width: 100%;
}